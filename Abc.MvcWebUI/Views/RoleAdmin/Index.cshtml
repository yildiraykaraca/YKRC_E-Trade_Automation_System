@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-4">
    <h2>Yetkiler</h2>
    <hr />
    <p>
        @Html.ActionLink("Yeni Yetki Ekle", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <hr />
    <table class="table table-bordered table-striped">
        <tr>
            <th>
              Yetki ID
            </th>
            <th>
              Yetki Adı
            </th>
        -
       
            <th style="width: 135px;"></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">Yetki Yok</td>
            </tr>
        }
        else
        {
            foreach (var role in Model)
            {

                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin", new { id = role.Id }))
                        { 
                            @Html.ActionLink("Güncelle", "Edit", new { id = role.Id }, new { @class = "btn btn-primary btn-sm" })
                        <td>
                             <button type="submit" class="btn btn-danger btn-sm">Yetki Sil</button>
                        </td>
                        }
                      </td>
                       
                   
           
                </tr>

            }

        }
       
</div>

